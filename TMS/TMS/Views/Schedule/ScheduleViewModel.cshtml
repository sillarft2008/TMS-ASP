@model TMS.ViewModels.ScheduleViewModel
@using TMS.Models

<div>
    <hr />
    @Html.HiddenFor(model => model.schedule.job.id)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.schedule.startTimeDate , htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.schedule.startTimeDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.schedule.startTimeDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.schedule.duration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.schedule.duration, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.schedule.duration, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Competencies, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @foreach (TMS.localhostCompetency.Competency competency in Model.Competencies)
            {
                <label>
                    <input type="radio" value="@competency.id" name="compIds" />
                    @competency.competency
                </label>
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>

